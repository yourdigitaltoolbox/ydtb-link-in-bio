{
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
    "git": {
        "requireBranch": "master",
        "commitMessage": "chore: release v${version}"
    },
    "github": {
        "release": true,
        "assets": [
            "config/*",
            "dist/*",
            "node_modules/*",
            "src/*",
            "vendor/*",
            "license.md",
            "readme.md",
            "composer.json",
            "composer.lock",
            "bud.config.mjs",
            "ydtb-link-in-bio.php"
        ]
    },
    "hooks": {
        "before:init": [
            "git pull"
        ],
        "after:bump": [
            "composer install",
            "bun install",
            "bun run build",
            "git checkout --detach",
            "git add dist/* node_modules/* vendor/* -f"
        ],
        "after:release": [
            "git checkout master"
        ]
    },
    "plugins": {
        "@release-it/bumper": {
            "out": [
                {
                    "file": "ydtb-link-in-bio.php",
                    "type": "text/php"
                }
            ]
        }
    }
}